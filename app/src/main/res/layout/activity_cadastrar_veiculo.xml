<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CadastrarVeiculoActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/tv_title_veiculo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cadastrar Novo Veículo"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="24dp"/>

        <EditText
            android:id="@+id/et_marca"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Marca"
            android:inputType="text"
            android:layout_marginBottom="8dp"/>

        <EditText
            android:id="@+id/et_modelo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Modelo"
            android:inputType="text"
            android:layout_marginBottom="8dp"/>

        <EditText
            android:id="@+id/et_ano"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ano de Fabricação"
            android:inputType="number"
            android:layout_marginBottom="8dp"/>

        <EditText
            android:id="@+id/et_placa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Placa"
            android:inputType="textCapCharacters"
            android:layout_marginBottom="8dp"/>

        <EditText
            android:id="@+id/et_combustivel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Tipo de Combustível"
            android:inputType="text"
            android:layout_marginBottom="8dp"/>

        <EditText
            android:id="@+id/et_quilometragem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Quilometragem Atual (km)"
            android:inputType="number"
            android:layout_marginBottom="16dp"/>

        <Button
            android:id="@+id/btn_salvar_veiculo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Salvar Veículo"/>

    </LinearLayout>
</ScrollView>